<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebkg"
    android:padding="16dp">

    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/audiowide"
        android:text="ATTENDANCE MANAGER"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/markAttendanceButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/dashboardTitle"
        android:layout_marginTop="20dp"
        android:background="@color/violet"
        android:fontFamily="@font/audiowide"
        android:text="Mark attendance"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/subjectEditText"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@id/markAttendanceButton"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:hint="Add subject"
        android:padding="10dp" />

    <Button
        android:id="@+id/addSubjectButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/subjectEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-51dp"
        android:layout_marginEnd="3dp"
        android:background="#FFEB3B"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/subjectListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectEditText"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="5dp">
    </ListView>

    <Button
        android:id="@+id/viewAttendanceButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/subjectListView"
        android:layout_marginTop="20dp"
        android:background="@color/violet"
        android:fontFamily="@font/audiowide"
        android:text="View attendance"
        android:textColor="#FFFFFF" />
</RelativeLayout>
